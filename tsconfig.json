{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom", "dom.iterable"],                               
    "baseUrl": "./",                                                                   
    "rootDirs": ["./src"],                                   
    "outDir": "./dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "strictPropertyInitialization": false
                         
  },
  "include": ["src/**/*", "./*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
